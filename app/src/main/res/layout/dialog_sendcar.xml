<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_car_license_inputbox_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:text="输入车辆信息"
            android:textColor="#9DA9B4"
            android:textSize="26sp"
            />

        <LinearLayout
            android:id="@+id/ll_license_input_boxes_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_car_license_inputbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/input_car_box"
                android:focusable="false"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/et_car_license_inputbox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                android:background="@mipmap/input_car_box"
                android:focusable="false"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/et_car_license_inputbox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                android:background="@mipmap/input_car_box"
                android:focusable="false"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/et_car_license_inputbox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                android:background="@mipmap/input_car_box"
                android:focusable="false"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/et_car_license_inputbox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                android:background="@mipmap/input_car_box"
                android:focusable="false"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/et_car_license_inputbox6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                android:background="@mipmap/input_car_box"
                android:focusable="false"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/et_car_license_inputbox7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                android:background="@mipmap/input_car_box"
                android:focusable="false"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#F0EFF4"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:keyBackground="@color/color_00bbff"
            android:keyTextColor="#ffffff"
            android:keyTextSize="18sp"
            android:labelTextSize="18sp"
            android:paddingTop="5dp"
            android:shadowColor="#ffffff"
            android:shadowRadius="0.0"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_dialog_vehicle_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/space_40"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/color_00bbff"
                android:background="@color/color_c1e6f4"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_dialog_vehicle_sure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/space_40"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/color_ffffff"
                android:background="@color/color_00bbff"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>